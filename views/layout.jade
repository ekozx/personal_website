doctype html
html
  head
    title= title
    link(rel='stylesheet', href='/stylesheets/style.css')
    link(rel='stylesheet', href='/stylesheets/large.css', media="(max-width: 1500px)")
    link(rel='stylesheet', href='/stylesheets/small.css', media='(max-width: 1000px)')
    link(rel='stylesheet', href='/stylesheets/ionicons.min.css')
    script(src="/javascripts/processing.min.js")
    
  body(style="background-image: url(/images/sakura.jpg);")
    .color-container
      a(href='/').me-link: img(src='/images/me.png').me-img
      .display
        .description
          ul.navbar
            li: a(href='/', id='root') projects
            li: a(href='/resume', id='resume')  resumé
            li: a(href='/blog', id='blog') blog
          p.intro-text I’m a sophomore enrolled in The Ohio State University’s computer science and engineering program. Philosophy and problem solving are my passions.
        .intro
          .left-nav
          h1: a(href='/').title Evan Kozliner
          ul.social-media
            li: a(href='https://twitter.com/evankozliner', title='twitter')
              span.ion-social-twitter
            li: a(href='http://www.linkedin.com/pub/evan-kozliner/62/422/40a', title='linkedIn')
              span.ion-social-linkedin
            li: a(href='https://github.com/ekozx', title='github')
              span.ion-social-github
            li: a(href='mailto:evankozliner@gmail.com?subject=Hey!', title='email')
              span.ion-ios7-email
          span.hidden-text-box evankozliner@gmail.com
      block content
  script(src="//ajax.googleapis.com/ajax/libs/jquery/1.11.1/jquery.min.js")
  script(src="/javascripts/misc.js")
